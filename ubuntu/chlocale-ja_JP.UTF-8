#!/bin/bash

##
# localeをja_JP.UTF-8に変更する
#

SCRIPT_DIR=$(cd $(dirname $0) && pwd)

TARGET_LOCALE="ja_JP.UTF-8"

if [ -e ${SCRIPT_DIR}/chlocale ];
  ${SCRIPT_DIR}/chlocale ${TARGET_LOCALE}
else
  curl --silent https://raw.githubusercontent.com/kotazuck/scripts/master/ubuntu/chlocale | sh -- ${TARGET_LOCALE}
fi

